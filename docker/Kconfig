menu "Utilities"

config DOCKER
	bool "Docker support"
	default n
	select PROC_PID_CPUSET
	select NET
	select NETDEVICES
	select NET_CORE
	select INET
	select IPV6
	select NET_L3_MASTER_DEV
	select NETFILTER
	select NETFILTER_ADVANCED
	select NF_CONNTRACK
	select NETFILTER_XTABLES
	select NF_CONNMARK_IPV4
	select IP_NF_IPTABLES
	select NF_NAT_MASQUERADE_IPV4
	select IP_NF_NAT
	select IP_NF_TARGET_NETMAP
	select IP_NF_TARGET_REDIRECT
	select NET_SCHED
	select CGROUP_NET_PRIO
	select CGROUP_NET_CLASSID
	select MD
	select TTY
	select UNIX98_PTYS
	select HUGETLBFS
	select PERSISTENT_KEYRINGS
	select ENCRYPTED_KEYS
	select KEY_DH_OPERATIONS
	select NAMESPACES
	select NET_NS
	select PID_NS
	select IPC_NS
	select UTS_NS
	select CGROUP_CPUACCT
	select CGROUP_DEVICE
	select CGROUP_FREEZER
	select CPUSETS
	select BLOCK
	select BLK_CGROUP
	select BLK_DEV_THROTTLING
	select KEYS
	select VETH
	select BRIDGE
	select BRIDGE_NETFILTER
	select NF_NAT_IPV4
	select IP_NF_FILTER
	select IP_NF_TARGET_MASQUERADE
	select NETFILTER_XT_MATCH_ADDRTYPE
	select NETFILTER_XT_MATCH_CONNTRACK
	select NETFILTER_XT_MATCH_IPVS
	select NF_NAT
	select NF_NAT_NEEDED
	select POSIX_MQUEUE
	select USER_NS
	select SECCOMP
	select CGROUP_PIDS
	select CGROUP_HUGETLB
	select NET_CLS_CGROUP
	select RT_GROUP_SCHED
	select IP_VS
	select IP_VS_PROTO_TCP
	select IP_VS_PROTO_UDP
	select IP_VS_NFCT
	select IP_VS_RR
	select VXLAN
	select IPVLAN
	select VLAN_8021Q
	select BRIDGE_VLAN_FILTERING
	select SECURITY_APPARMOR
	select MACVLAN
	select DUMMY
	select DEVPTS_MULTIPLE_INSTANCES
	help
		Enable options required for Docker.

config DOCKER_STATISTICS
	bool "Gathering statistics BROKEN"
	default y if DOCKER
	depends on DOCKER
	select RESOURCE_COUNTERS
	select CGROUP_PERF
	select CFS_BANDWIDTH
	help
		Allow gathering statistics from running containers

config DOCKER_SWAP
	bool "Enable swap limit"
	default n
	depends on DOCKER
	select MEMCG
	select MEMCG_SWAP
	select MEMCG_SWAP_ENABLED
	help
		Yes if you want to be able to limit swap usage of containers

config DOCKER_SECURE_NETWORKS
	bool "Secure networks"
	default y if DOCKER
	depends on DOCKER
	select XFRM_ALGO
	select XFRM_USER
	help
		Yes if you use secure networks

config DOCKER_BTRFS
	bool "Use btrfs"
	default n
	depends on DOCKER
	select BTRFS_FS
	select BTRFS_FS_POSIX_ACL
	help
		Yes if you are using btrfs

config DOCKER_DEVICE_MAPPER
	bool "Device Mapper support"
	default y if DOCKER
	depends on DOCKER
	select BLK_DEV_DM
	select DM_THIN_PROVISIONING
	select EXT4_FS
	select EXT4_FS_POSIX_ACL
	select EXT4_FS_SECURITY
	help
		Yes if you want support for device mapper (recommended)

config DOCKER_OVERLAY_FS
	bool "Use overlay FS"
	default y
	depends on DOCKER
	select OVERLAY_FS
	select EXT4_FS_SECURITY
	select EXT4_FS_POSIX_ACL	help
		Yes if want to use the Overlay FS (recommended)

config DOCKER_AUFS
	bool "Use aufs"
	default y if DOCKER
	depends on DOCKER
	select AUFS_FS
	select EXT4_FS_POSIX_ACL
	select EXT4_FS_SECURITY
	help
		Yes if you are using aufs

endmenu
